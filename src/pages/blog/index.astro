---
import Layout from '../../layouts/Layout.astro'
import EnhancedBlogClient from '../../components/enhanced-blog-client'
import ScrollToTop from '../../components/scroll-to-top'
import Navbar from '../../components/navbar'
import Footer from '../../components/footer'
import { getAllBlogPosts } from '../../lib/content'

const posts = getAllBlogPosts()
---

<Layout title="Blog & Articles">
  <Navbar client:idle />
  <div class="min-h-screen bg-background">
    <div class="pt-16 md:pt-20">
      <div class="mx-auto max-w-screen-2xl px-2 md:px-4 py-12">
        <h1 class="text-3xl md:text-4xl font-bold mb-6 text-center">Blog</h1>
        <!-- 拡張されたブログクライアント -->
        <EnhancedBlogClient englishPosts={posts} client:visible mode="index" />
      </div>
    </div>
  </div>
  <Footer client:idle />
  <ScrollToTop client:visible>
    <div></div>
  </ScrollToTop>
</Layout>