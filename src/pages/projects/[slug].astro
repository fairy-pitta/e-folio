---
import Layout from '../../layouts/Layout.astro';
import { Badge } from '../../components/ui/badge';
import { getProject, getAllProjectSlugs } from '../../lib/content';
import { markdownToHtml } from '../../lib/markdown';
import ScrollToTop from '../../components/scroll-to-top';
import Navbar from '../../components/navbar';
import Footer from '../../components/footer';
import { ArrowLeftIcon, CalendarIcon, EyeIcon, Github } from 'lucide-react';
import '../../styles/globals.css';

export async function getStaticPaths() {
  const slugs = getAllProjectSlugs();
  return slugs.map((slug) => ({
    params: { slug: slug.slug },
  }));
}

const { slug } = Astro.params;
const project = getProject(slug!);

if (!project) {
  return Astro.redirect('/404');
}

const contentHtml = await markdownToHtml(project.content);
const title = `${project.frontmatter.title} | SingBirds`;
const description = project.frontmatter.description;
---

<Layout title={title} description={description}>
  <Navbar client:idle />
  <ScrollToTop client:visible>
    <div class="min-h-screen bg-background">
      <div class="pt-14 md:pt-16">
        <div class="container mx-auto px-4 py-12">
          <div class="max-w-4xl mx-auto">
            <a
              href="/projects"
              data-astro-prefetch
              class="mb-6 inline-flex items-center gap-2 text-sm text-gray-700 hover:text-gray-900"
            >
              <ArrowLeftIcon className="h-4 w-4 mr-2" />
              Back to Projects
            </a>

            <div class="grid grid-cols-1 gap-8 mb-8">
              <div>
                {project.frontmatter.coverImage && (
                  <div class="mb-6">
                    <img
                      src={project.frontmatter.coverImage}
                      alt={project.frontmatter.title}
                      width="1280"
                      height="720"
                      class="w-full rounded-xl border border-gray-200 shadow-sm object-cover cursor-zoom-in"
                      loading="eager"
                      decoding="async"
                      fetchpriority="high"
                      onclick={`showImageModal('${project.frontmatter.coverImage}')`}
                    />
                  </div>
                )}

                <!-- Modal for image popup -->
                <dialog id="image-modal" class="rounded-xl p-0 backdrop:bg-black/50">
                  <div class="relative">
                    <button
                      class="absolute right-4 top-4 z-10 inline-flex items-center justify-center rounded-md text-sm font-medium h-9 px-3 py-1.5 bg-black text-white hover:bg-white hover:text-black border border-black"
                      onclick="closeImageModal()"
                    >
                      Close
                    </button>
                    <img id="image-modal-img" src="" alt="Expanded image" class="max-h-[85vh] w-auto object-contain rounded-xl" />
                  </div>
                </dialog>

                <h1 class="text-3xl md:text-4xl font-bold mb-4">{project.frontmatter.title}</h1>
                <p class="text-lg text-muted-foreground mb-6">{project.frontmatter.description}</p>
                
                <div class="flex flex-wrap gap-2 mb-6">
                  {project.frontmatter.tags.map((tech: string) => (
                    <Badge variant="secondary">{tech}</Badge>
                  ))}
                </div>

                <div class="flex flex-wrap items-center gap-4 mb-6">
                  <span class="flex items-center text-muted-foreground">
                    <CalendarIcon className="h-4 w-4 mr-1" />
                    {project.frontmatter.date}
                  </span>
                </div>

                <div class="flex gap-3">
                  {project.frontmatter.githubUrl && (
                    <a
                      href={project.frontmatter.githubUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 [&_svg]:pointer-events-none [&_svg]:size-4 [&_svg]:shrink-0 h-10 px-4 py-2 bg-black text-white hover:bg-white hover:text-black border border-black"
                    >
                      <Github className="h-4 w-4 mr-2" />
                      View Code
                    </a>
                  )}
                  {project.frontmatter.liveUrl && (
                    <a
                      href={project.frontmatter.liveUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 [&_svg]:pointer-events-none [&_svg]:size-4 [&_svg]:shrink-0 h-10 px-4 py-2 border border-black text-black hover:bg-black hover:text-white"
                    >
                      <EyeIcon className="h-4 w-4 mr-2" />
                      Live Demo
                    </a>
                  )}
                </div>

                
              </div>
            </div>

            <div class="prose prose-sky prose-img:rounded-xl prose-headings:scroll-mt-8 prose-a:text-sky-600 max-w-none sm:prose-lg" set:html={contentHtml} />

            {project.frontmatter.gallery && project.frontmatter.gallery.length > 0 && (
              <div class="mt-12">
                <h2 class="text-2xl md:text-3xl font-bold mb-6">Gallery</h2>
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 gap-6">
                  {project.frontmatter.gallery.map((img: string) => (
                    <img
                      src={img}
                      alt={`${project.frontmatter.title} gallery image`}
                      class="w-full rounded-2xl border border-gray-200 shadow-md object-cover cursor-zoom-in"
                      loading="lazy"
                      decoding="async"
                      onclick={`showImageModal('${img}')`}
                    />
                  ))}
                </div>
              </div>
            )}

            <script>
              function showImageModal(src) {
                const dialog = document.getElementById('image-modal')
                const modalImg = document.getElementById('image-modal-img')
                if (dialog && modalImg) {
                  modalImg.src = src
                  dialog.showModal()
                }
              }
              function closeImageModal() {
                const dialog = document.getElementById('image-modal')
                if (dialog) dialog.close()
              }
            </script>

          </div>
        </div>
      </div>
    </div>
  </ScrollToTop>
  <Footer client:idle />
</Layout>