---
import '../styles/globals.css';
const { title = 'fairy-pitta | Software Engineer', description = 'Portfolio of fairy-pitta, a software engineer crafting modern web apps in Astro and React.' } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.svg"/>
    <!-- Google Fonts: Caveat 400..700 -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Caveat:wght@400..700&family=Source+Sans+3:ital,wght@0,200..900;1,200..900&display=swap" rel="stylesheet">
    <!-- Using Google Fonts Caveat; removed inline Noto Sans override and local TTF FontFace script -->
  </head>
  <body>
    <slot />
  </body>
</html>